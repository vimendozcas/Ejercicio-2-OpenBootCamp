// Ejercicio con if
let numeroIf = // asigna un valor aquí

if (numeroIf < 0) {
    console.log("El número es negativo");
} else if (numeroIf > 0) {
    console.log("El número es positivo");
} else {
    console.log("El número es 0");
}

// Ejercicio con while
let numeroWhile = 0;

while (numeroWhile < 3) {
    numeroWhile++;
    console.log("El valor de numeroWhile es " + numeroWhile);
}

// Ejercicio con do while
let numeroDoWhile = 0;

do {
    numeroDoWhile++;
    console.log("El valor de numeroDoWhile es " + numeroDoWhile);
} while (numeroDoWhile < 3);

// Ejercicio con for
for (let numeroFor = 0; numeroFor <= 3; numeroFor++) {
    console.log("El valor de numeroFor es " + numeroFor);
}

// Ejercicio con switch
let estacion = // asigna un valor aquí

switch (estacion) {
    case "primavera":
        console.log("Estamos en primavera");
        break;
    case "verano":
        console.log("Estamos en verano");
        break;
    case "otoño":
        console.log("Estamos en otoño");
        break;
    case "invierno":
        console.log("Estamos en invierno");
        break;
    default:
        console.log("El valor introducido no corresponde a una estación del año");
        break;
}
